<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.history.HistoryView?>
<?import de.prob2.ui.menu.MenuController?>
<?import de.prob2.ui.verifications.VerificationsView?>
<?import de.prob2.ui.operations.OperationsView?>
<?import de.prob2.ui.menu.MainView?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TitledPane?>
<?import de.prob2.ui.stats.StatsView?>
<?import de.prob2.ui.MainController?>
<?import de.prob2.ui.project.ProjectView?>

<fx:root type ="MainController" maxHeight="Infinity"
			maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
			prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<SplitPane fx:id="horizontalSP" dividerPositions="0.26,0.8">
			<Accordion fx:id ="leftAccordion">
				<panes>
					<TitledPane text="%tptitles.operations" fx:id="operationsTP" onMouseClicked="#operationsTPClicked">
						<OperationsView/>
					</TitledPane>
					<TitledPane text="%tptitles.verifications" fx:id ="verificationsTP" onMouseClicked="#verificationsTPClicked">
						<VerificationsView/>
					</TitledPane>
					<TitledPane text="%tptitles.stats" fx:id ="statsTP" onMouseClicked="#statsTPClicked">
						<StatsView/>
					</TitledPane>
					<TitledPane text="%tptitles.project" fx:id = "projectTP" onMouseClicked="#projectTPClicked">
						<ProjectView/>
					</TitledPane>
				</panes>
			</Accordion>
			<MainView/>
			<Accordion fx:id ="rightAccordion" expandedPane="$historyTP">
				<panes>
					<TitledPane text="%tptitles.history" fx:id="historyTP" collapsible="false" onMouseClicked="#historyTPClicked">
						<HistoryView/>
					</TitledPane>
				</panes>
			</Accordion>
		</SplitPane>
	</center>
	<top>
		<MenuController/>
	</top>
</fx:root>
