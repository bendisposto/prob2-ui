<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.animations.AnimationsView?>
<?import de.prob2.ui.history.HistoryView?>
<?import de.prob2.ui.menu.MenuController?>
<?import de.prob2.ui.modelchecking.ModelcheckingController?>
<?import de.prob2.ui.operations.OperationsView?>
<?import de.prob2.ui.states.StatesView?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import de.prob2.ui.stats.StatsView?>
<?import de.prob2.ui.MainController?>
<fx:root type ="MainController" maxHeight="Infinity"
			maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
			prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<SplitPane dividerPositions="0.26,0.8">
			<Accordion fx:id ="leftAccordion">
				<panes>
					<TitledPane text="%tptitles.operations">
						<OperationsView/>
					</TitledPane>
					<TitledPane text="%tptitles.modelcheck">
						<ModelcheckingController/>
					</TitledPane>
					<TitledPane text="%tptitles.stats">
						<StatsView/>
					</TitledPane>
					<TitledPane text="%tptitles.animations">
						<AnimationsView/>
					</TitledPane>
				</panes>
			</Accordion>
			<StatesView/>
			<Accordion fx:id ="rightAccordion" expandedPane="$historyTP">
				<panes>
					<TitledPane text="%tptitles.history" fx:id="historyTP" collapsible="false">
						<HistoryView/>
					</TitledPane>
				</panes>
			</Accordion>
		</SplitPane>
	</center>
	<top>
		<MenuController/>
	</top>
</fx:root>
