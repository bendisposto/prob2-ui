<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.layout.FontSize?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CustomMenuItem?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.65"
		 xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize"/>
	</fx:define>
	<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
		AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
		<VBox spacing="5.0">
			<AnchorPane>
				<HBox spacing="10.0" AnchorPane.leftAnchor="10.0"
					AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0"
					AnchorPane.bottomAnchor="10.0" alignment="CENTER">
					<Button styleClass="button-dark"
						alignment="CENTER" contentDisplay="GRAPHIC_ONLY" mnemonicParsing="false"
						onAction="#handleSearchButton" HBox.hgrow="NEVER" prefHeight="${searchButton.width}">
						<graphic>
							<FontAwesomeIconView glyphName="SEARCH"
								styleClass="icon-basic" glyphSize="${fontSize.fontSize}"/>
						</graphic>
					</Button>
					<TextField fx:id="filterEvents" onAction="#handleSearchButton"
						promptText="%operations.search.prompt" HBox.hgrow="ALWAYS" />
					<HelpButton fx:id="helpButton" HBox.hgrow="NEVER"/>
				</HBox>
			</AnchorPane>
			<AnchorPane>
				<HBox AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="10.0"
					AnchorPane.topAnchor="2.0" AnchorPane.rightAnchor="5.0">
					<HBox HBox.hgrow="ALWAYS" alignment="CENTER_LEFT" spacing="10.0">
						<Button fx:id="backButton" mnemonicParsing="false"
							onAction="#handleBackButton">
							<graphic>
								<FontAwesomeIconView styleClass="icon-dark"
									glyphName="CHEVRON_LEFT" glyphSize="${fontSize.fontSize + 2}"/>
							</graphic>
							<tooltip>
								<Tooltip text="%history.buttons.back.tooltip" />
							</tooltip>
						</Button>
						<Button fx:id="forwardButton" mnemonicParsing="false"
							onAction="#handleForwardButton">
							<graphic>
								<FontAwesomeIconView styleClass="icon-dark"
									glyphName="CHEVRON_RIGHT" glyphSize="${fontSize.fontSize + 2}"/>
							</graphic>
							<tooltip>
								<Tooltip text="%history.buttons.forward.tooltip" />
							</tooltip>
						</Button>
					</HBox>
					<HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
						<Button fx:id="sortButton" mnemonicParsing="false"
							onAction="#handleSortButton">
							<graphic>
								<FontAwesomeIconView styleClass="icon-dark"
									glyphName="SORT" glyphSize="${fontSize.fontSize + 2}"/>
							</graphic>
							<tooltip>
								<Tooltip text="%operations.sort.tooltip" />
							</tooltip>
						</Button>
						<ToggleButton fx:id="disabledOpsToggle"
							mnemonicParsing="false" onAction="#handleDisabledOpsToggle"
							selected="true">
							<graphic>
								<FontAwesomeIconView styleClass="icon-dark"
									glyphName="EYE" glyphSize="${fontSize.fontSize + 2}"/>
							</graphic>
						</ToggleButton>
						<MenuButton fx:id="randomButton" mnemonicParsing="false">
							<items>
								<MenuItem fx:id="oneRandomEvent" mnemonicParsing="false"
									onAction="#random" text="%operations.random.one" />
								<MenuItem fx:id="fiveRandomEvents" mnemonicParsing="false"
									onAction="#random" text="%operations.random.five" />
								<MenuItem fx:id="tenRandomEvents" mnemonicParsing="false"
									onAction="#random" text="%operations.random.ten" />
								<CustomMenuItem fx:id="someRandomEvents"
									mnemonicParsing="false">
									<content>
										<AnchorPane>
											<TextField fx:id="randomText" onAction="#random"
												promptText="%operations.random.some.prompt" />
										</AnchorPane>
									</content>
								</CustomMenuItem>
							</items>
							<graphic>
								<FontAwesomeIconView styleClass="icon-dark"
									glyphName="RANDOM" glyphSize="${fontSize.fontSize + 2}"/>
							</graphic>
							<tooltip>
								<Tooltip text="%operations.random.tooltip" />
							</tooltip>
						</MenuButton>
					</HBox>
				</HBox>
			</AnchorPane>
		</VBox>
		<ListView fx:id="opsListView" VBox.vgrow="always" />
	</VBox>
</fx:root>
