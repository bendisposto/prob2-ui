<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.beditor.BEditor?>
<?import de.prob2.ui.layout.FontSize?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import org.fxmisc.flowless.VirtualizedScrollPane?>
<fx:root type="BorderPane" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize" />
	</fx:define>
	<top>
		<HBox alignment="CENTER_LEFT">
			<Button fx:id="saveButton" onAction="#handleSave">
				<graphic>
					<FontAwesomeIconView styleClass="icon-dark" glyphName="SAVE" glyphSize="${fontSize.fontSize + 4}" />
				</graphic>
				<tooltip>
					<Tooltip text="%menu.file.items.saveMachine"/>
				</tooltip>
			</Button>
		</HBox>
	</top>
	<center>
		<VirtualizedScrollPane hbarPolicy="ALWAYS" vbarPolicy="ALWAYS">
			<content>
				<BEditor fx:id="beditor" BorderPane.alignment="CENTER" />
			</content>
		</VirtualizedScrollPane>
	</center>
</fx:root>
