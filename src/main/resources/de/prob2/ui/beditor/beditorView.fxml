<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.fxmisc.flowless.VirtualizedScrollPane?>
<?import de.prob2.ui.beditor.BEditor?>
<?import de.prob2.ui.beditor.BEditorView?>

<fx:root type="BEditorView" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="%menu.file">
                <!--accelerator="Shortcut+Alt+S"-->
                <MenuItem onAction="#handleSave" mnemonicParsing="false" text="%beditor.menu.file.items.save"/>
                <MenuItem onAction="#handleSaveAs" mnemonicParsing="false" text="%beditor.menu.file.items.saveAs"/>
            </Menu>
            <!-- Maybe replace this with Help Button and change font size..etc? -->
            <!--<Menu mnemonicParsing="false" text="%project.preferences.tab.menu.edit">
                <MenuItem mnemonicParsing="false" text="%menu.file.items.placeholder"/>
            </Menu>
            <Menu mnemonicParsing="false" text="%menu.help">
                <MenuItem mnemonicParsing="false" text="%menu.help.items.about"/>
            </Menu>-->
        </MenuBar>
    </top>
    <center>
        <VirtualizedScrollPane hbarPolicy="ALWAYS" vbarPolicy="ALWAYS">
            <content>
                <BEditor fx:id="beditor" BorderPane.alignment="CENTER" />
            </content>
        </VirtualizedScrollPane>
    </center>
</fx:root>