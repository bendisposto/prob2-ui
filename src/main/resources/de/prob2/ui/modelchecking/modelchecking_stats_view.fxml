<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Tooltip?>

<fx:root type="ScrollPane" fitToHeight="true" fitToWidth="true"
	stylesheets="@/prob.css" xmlns:fx="http://javafx.com/fxml/1">
	<VBox>
		<AnchorPane>
			<VBox fx:id="historyBox" style="-fx-border-color: grey;"
				AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="5.0"
				AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="40.0" />
			<Button fx:id="addModelCheckButton" disable="true" prefHeight="26.0"
				prefWidth="26.0" contentDisplay="GRAPHIC_ONLY" AnchorPane.topAnchor="6.0"
				AnchorPane.rightAnchor="-4.0" onAction="#addModelCheck">
				<graphic>
					<FontAwesomeIconView fill="#555560" glyphName="PLUS_CIRCLE"
						size="26" />
				</graphic>
				<tooltip>
				<Tooltip text="%modelchecking.stats.addModelCheck.tooltip"/>
				</tooltip>
			</Button>
		</AnchorPane>
		<AnchorPane fx:id="statsPane" />
	</VBox>
</fx:root>
