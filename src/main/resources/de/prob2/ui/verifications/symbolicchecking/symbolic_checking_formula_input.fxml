<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.verifications.symbolicchecking.SymbolicCheckingFormulaInput?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<fx:root type="SymbolicCheckingFormulaInput" xmlns:fx="http://javafx.com/fxml/1">
	<VBox spacing="10.0" alignment="CENTER">
		<StackPane>
			<TextField fx:id="tfFormula" HBox.hgrow="ALWAYS"/>
			<ChoiceBox fx:id="cbOperations"/>
		</StackPane>
		<HBox alignment="CENTER" spacing="10.0">
			<Button fx:id="btAdd" text="%verifications.symbolic.add" styleClass="button-blue"/>
			<Button fx:id="btCheck" text="%verifications.symbolic.check" styleClass="button-blue"/>
			<Button fx:id="btCancel" onAction="#cancel" text="%common.buttons.cancel" styleClass="button-blue"/>
		</HBox>
	</VBox>
</fx:root>
