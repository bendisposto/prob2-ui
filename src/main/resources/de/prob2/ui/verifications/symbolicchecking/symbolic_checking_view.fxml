<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.verifications.symbolicchecking.SymbolicCheckingView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<fx:root type="SymbolicCheckingView" fitToHeight="true" fitToWidth="true"
	stylesheets="@/prob.css" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize" />
	</fx:define>
	<AnchorPane>
		<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="6.0" spacing="2.0">
			<HBox alignment="CENTER_LEFT">
				<Button fx:id="checkMachineButton" onAction="#checkMachine">
					<graphic>
						<FontAwesomeIconView styleClass="icon-dark"
							glyphName="CHECK_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
					</graphic>
					<tooltip>
						<Tooltip text="%verifications.checkMachine" />
					</tooltip>
				</Button>
				<Button fx:id="cancelButton" onAction="#cancel">
					<graphic>
						<FontAwesomeIconView styleClass="icon-dark"
							glyphName="TIMES_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
					</graphic>
					<tooltip>
						<Tooltip text="%verifications.cancel" />
					</tooltip>
				</Button>
				<HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
					<Button fx:id="addFormulaButton" disable="true" onAction="#addFormula"
						contentDisplay="GRAPHIC_ONLY">
						<graphic>
							<FontAwesomeIconView styleClass="icon-dark"
								glyphName="PLUS_CIRCLE" glyphSize="${fontSize.fontSize * 2}" />
						</graphic>
					</Button>
					<HelpButton fx:id="helpButton" />
				</HBox>
				<VBox.margin>
					<Insets bottom="0.0" left="10.0" right="0.0" top="5.0" />
				</VBox.margin>
			</HBox>
			<TableView fx:id="tvFormula" minHeight="420.0" VBox.vgrow="always">
				<columnResizePolicy>
					<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
				</columnResizePolicy>
				<columns>
					<TableColumn fx:id="shouldExecuteColumn" minWidth="60.0"
						prefWidth="60.0" maxWidth="60.0" text="" />
					<TableColumn fx:id="formulaStatusColumn" minWidth="80.0"
						maxWidth="80.0" prefWidth="80.0" text="%verifications.columns.status" />
					<TableColumn fx:id="formulaNameColumn" minWidth="120.0"
						prefWidth="240.0" text="%verifications.formula" />
					<TableColumn fx:id="formulaDescriptionColumn" minWidth="180.0"
						prefWidth="180.0" text="%verifications.columns.description" />
				</columns>
				<placeholder>
					<Label text="%verifications.symbolic.formula.noFormulas" />
				</placeholder>
			</TableView>
		</VBox>
	</AnchorPane>
</fx:root>
