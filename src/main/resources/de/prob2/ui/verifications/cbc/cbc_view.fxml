<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import de.prob2.ui.verifications.ltl.MachineTableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Tooltip?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.verifications.cbc.CBCView?>

<fx:root stylesheets="@/prob.css" type="CBCView"
	xmlns:fx="http://javafx.com/fxml/1">
	<ScrollPane fitToHeight="true" fitToWidth="true"
		AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
		AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
		<AnchorPane>
			<VBox spacing="5.0" AnchorPane.bottomAnchor="0.0"
				AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
				AnchorPane.topAnchor="6.0" alignment="TOP_RIGHT">
				<VBox spacing="5.0" AnchorPane.bottomAnchor="0.0"
					AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
					AnchorPane.topAnchor="6.0" alignment="TOP_RIGHT">
					<HelpButton fx:id="helpButton" AnchorPane.rightAnchor="-8">
						<VBox.margin>
							<Insets right="-8" />
						</VBox.margin>
					</HelpButton>
					<HBox spacing="5.0" alignment="CENTER_LEFT">
						<VBox spacing="5.0" alignment="TOP_RIGHT">
							<Button fx:id="addFormulaButton" disable="true" onAction="#addFormula"
								styleClass="button-blue" text="Add CBC Formula">
							</Button>
						</VBox>
						<VBox.margin>
							<Insets left="5" right="5" />
						</VBox.margin>
					</HBox>
					<VBox styleClass="border" spacing="0.0">
						<MachineTableView fx:id="tvMachines" />
						<TableView fx:id="tvFormula" minHeight="150">
							<columnResizePolicy>
								<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
							</columnResizePolicy>
							<columns>
								<TableColumn fx:id="formulaStatusColumn" minWidth="80.0"
									maxWidth="80.0" prefWidth="80.0" text="%verifications.ltl.columns.status" />
								<TableColumn fx:id="formulaNameColumn" minWidth="120.0"
									maxWidth="240.0" prefWidth="120.0"
									text="%verifications.ltl.formula.columns.name" />
								<TableColumn fx:id="formulaDescriptionColumn"
									minWidth="120.0" prefWidth="120.0"
									text="%verifications.ltl.columns.description" />
							</columns>
							<placeholder>
								<Label text="%verifications.cbc.formula.noFormulas" />
							</placeholder>
						</TableView>
					</VBox>
				</VBox>
			</VBox>
		</AnchorPane>
	</ScrollPane>
</fx:root>
