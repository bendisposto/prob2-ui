<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<fx:root type="ScrollPane" fitToHeight="true" fitToWidth="true"
		 stylesheets="@/prob.css" xmlns:fx="http://javafx.com/fxml/1">
	<VBox>
		<AnchorPane>
			<VBox AnchorPane.bottomAnchor="8.0" AnchorPane.leftAnchor="5.0"
				AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="6.0" alignment="CENTER_RIGHT"
				spacing="10">
				<HBox spacing="5.0" alignment="CENTER_LEFT">
					<HBox spacing="5.0" alignment="BOTTOM_LEFT" HBox.hgrow="ALWAYS">
						<Button fx:id="checkMachineButton" 
							text="%verifications.checkMachine" onAction="#checkMachine"
							styleClass="button-blue" prefWidth="130.0" AnchorPane.rightAnchor="-8"/>
						<Button fx:id="cancelButton" 
							text="%verifications.cancel" onAction="#cancelModelcheck"
							styleClass="button-blue" prefWidth="130.0" AnchorPane.rightAnchor="-8"/>
					</HBox>
					<HBox spacing="5.0" alignment="TOP_RIGHT">
						<Button fx:id="addModelCheckButton" AnchorPane.rightAnchor="-8.0" disable="true"
							prefHeight="26.0" prefWidth="26.0" contentDisplay="GRAPHIC_ONLY"
							onAction="#addModelCheck">
							<graphic>
								<FontAwesomeIconView styleClass="icon-dark"
									glyphName="PLUS_CIRCLE" size="26" />
							</graphic>
							<tooltip>
								<Tooltip
									text="%verifications.modelchecking.stats.addModelCheck.tooltip" />
							</tooltip>
						</Button>
						<HelpButton fx:id="helpButton"/>
					</HBox>
				</HBox>
				<TableView fx:id="tvItems" minHeight="150">
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
					<columns>
						<TableColumn fx:id="statusColumn" minWidth="80.0"
							maxWidth="80.0" prefWidth="80.0" text="%verifications.columns.status" />
						<TableColumn fx:id="strategyColumn" minWidth="120.0"
							maxWidth="240.0" prefWidth="120.0" text="%verifications.columns.strategy" />
						<TableColumn fx:id="descriptionColumn" minWidth="120.0"
							prefWidth="120.0" text="%verifications.columns.description" />
						<TableColumn fx:id="shouldExecuteColumn"
							minWidth="50.0" prefWidth="50.0"
							text="" />
					</columns>
					<placeholder>
						<Label text="%verifications.modelchecking.stats.placeholder" />
					</placeholder>
				</TableView>
			</VBox>
		</AnchorPane>
		<AnchorPane fx:id="statsPane" />
	</VBox>
</fx:root>
