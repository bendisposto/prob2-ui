<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.internal.Spacer?>
<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.verifications.modelchecking.ModelcheckingView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="ModelcheckingView" fitToHeight="true" fitToWidth="true"
	stylesheets="@/prob.css" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize" />
	</fx:define>
	<VBox>
		<HBox styleClass="border" alignment="CENTER">
			<Button fx:id="checkMachineButton" onAction="#checkMachine">
				<graphic>
					<FontAwesomeIconView styleClass="icon-dark"
						glyphName="CHECK_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
				</graphic>
				<tooltip>
					<Tooltip text="%common.checkMachine" />
				</tooltip>
			</Button>
			<Button fx:id="cancelButton" onAction="#cancelModelcheck">
				<graphic>
					<FontAwesomeIconView styleClass="icon-dark"
						glyphName="TIMES_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
				</graphic>
				<tooltip>
					<Tooltip text="%common.buttons.cancel" />
				</tooltip>
			</Button>
			<Spacer/>
			<Button fx:id="addModelCheckButton" disable="true"
				contentDisplay="GRAPHIC_ONLY" onAction="#addModelCheck">
				<graphic>
					<FontAwesomeIconView styleClass="icon-dark"
						glyphName="PLUS_CIRCLE" glyphSize="${fontSize.fontSize * 2}" />
				</graphic>
				<tooltip>
					<Tooltip
						text="%verifications.modelchecking.modelcheckingView.tooltips.addModelCheck" />
				</tooltip>
			</Button>
			<HelpButton fx:id="helpButton" />
		</HBox>
		<TableView fx:id="tvItems" minHeight="150">
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
			<columns>
				<TableColumn fx:id="shouldExecuteColumn" sortable="false" style="-fx-alignment: CENTER;" minWidth="${fontSize.fontSize * 4}" maxWidth="${fontSize.fontSize * 4}"/>
				<TableColumn fx:id="statusColumn" style="-fx-alignment: CENTER;" minWidth="${fontSize.fontSize * 6}" maxWidth="${fontSize.fontSize * 6}" text="%common.columns.status" />
				<TableColumn fx:id="strategyColumn" minWidth="260.0" maxWidth="320.0" prefWidth="260.0" text="%verifications.common.columns.strategy" />
			</columns>
			<placeholder>
				<Label text="%verifications.modelchecking.modelcheckingView.noModelcheckingJobs" />
			</placeholder>
		</TableView>
		<AnchorPane fx:id="statsPane">
			<VBox.margin>
				<Insets top="5.0" />
			</VBox.margin>
		</AnchorPane>
	</VBox>
</fx:root>
