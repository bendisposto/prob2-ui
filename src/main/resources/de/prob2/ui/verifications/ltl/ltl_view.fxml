<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.verifications.ltl.LTLView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>


<fx:root stylesheets="@/prob.css" type="LTLView" minHeight="0.0" minWidth="0.0" prefHeight="339.0" prefWidth="145.0" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<Button fx:id="addLTLButton" disable="true" contentDisplay="GRAPHIC_ONLY" 
				prefHeight="26.0" prefWidth="26.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" onAction ="#addFormula">
			<graphic>
				<FontAwesomeIconView fill="#555560" glyphName="PLUS_CIRCLE" size="26" />
			</graphic>
		</Button>
		<Button fx:id="checkAllButton" disable="true" text="%ltl.formula.checkAll"
				prefHeight="26.0" prefWidth="100.0" AnchorPane.leftAnchor="0.0" 
				AnchorPane.topAnchor="10.0" onAction ="#checkAll" styleClass="button-blue"/>
		<AnchorPane styleClass="border" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
			<TableView fx:id="tv_formula" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
				<columnResizePolicy>
					<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
				</columnResizePolicy>
				<columns>
					<TableColumn fx:id="statusColumn" minWidth="80.0" maxWidth="80.0"
						prefWidth="80.0" text="%ltl.formula.columns.status" />
					<TableColumn fx:id="nameColumn" minWidth="120.0" maxWidth = "200.0"
						prefWidth="120.0" text="%ltl.formula.columns.name" />
					<TableColumn fx:id="descriptionColumn" minWidth="100.0"
						prefWidth="100.0" text="%ltl.formula.columns.description" />
				</columns>
				<placeholder>
					<Label text="%ltl.formula.noFormulas" />
				</placeholder>
			</TableView>	
		</AnchorPane>
	</children>
</fx:root>
