<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.internal.Spacer?>
<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.verifications.ltl.LTLView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="LTLView" fitToHeight="true" fitToWidth="true"
	stylesheets="@/prob.css" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize" />
	</fx:define>
	<VBox>
		<HBox styleClass="border" alignment="CENTER">
			<Button fx:id="checkMachineButton" disable="true" onAction="#checkMachine">
				<graphic>
					<FontAwesomeIconView styleClass="icon-dark"
						glyphName="CHECK_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
				</graphic>
				<tooltip>
					<Tooltip text="%verifications.common.checkMachine" />
				</tooltip>
			</Button>
			<Button fx:id="cancelButton" onAction="#cancel">
				<graphic>
					<FontAwesomeIconView styleClass="icon-dark"
						glyphName="TIMES_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
				</graphic>
				<tooltip>
					<Tooltip text="%common.buttons.cancel" />
				</tooltip>
			</Button>
			<Spacer/>
			<MenuButton fx:id="addMenuButton">
				<items>
					<MenuItem fx:id="addFormulaButton" onAction="#addFormula"
						text="%verifications.ltl.ltlView.addFormula" />
					<MenuItem fx:id="addPatternButton" onAction="#addPattern"
						text="%verifications.ltl.ltlView.addPattern" />
				</items>
				<graphic>
					<FontAwesomeIconView styleClass="icon-dark"
						glyphName="PLUS_CIRCLE" glyphSize="${fontSize.fontSize * 2}" />
				</graphic>
				<tooltip>
					<Tooltip text="%verifications.ltl.ltlView.tooltips.addFormulaOrPattern" />
				</tooltip>
			</MenuButton>
			<HelpButton fx:id="helpButton" />
		</HBox>
		<TableView fx:id="tvFormula" minHeight="150" VBox.vgrow="ALWAYS">
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
			<columns>
				<TableColumn fx:id="shouldExecuteColumn" sortable="false" style="-fx-alignment: CENTER;" minWidth="${fontSize.fontSize * 4}" maxWidth="${fontSize.fontSize * 4}"/>
				<TableColumn fx:id="formulaStatusColumn" style="-fx-alignment: CENTER;" minWidth="${fontSize.fontSize * 6}" maxWidth="${fontSize.fontSize * 6}" text="%verifications.common.columns.status" />
				<TableColumn fx:id="formulaNameColumn" minWidth="120.0" text="%verifications.common.columns.formula" />
				<TableColumn fx:id="formulaDescriptionColumn" minWidth="120.0" text="%verifications.common.columns.description" />
			</columns>
			<placeholder>
				<Label text="%verifications.ltl.ltlView.noFormulas" />
			</placeholder>
		</TableView>
		<TableView fx:id="tvPattern" minHeight="150">
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
			<columns>
				<TableColumn fx:id="patternStatusColumn" style="-fx-alignment: CENTER;" minWidth="${fontSize.fontSize * 6}" maxWidth="${fontSize.fontSize * 6}" text="%verifications.common.columns.status" />
				<TableColumn fx:id="patternNameColumn" minWidth="140.0"
					maxWidth="270.0" prefWidth="270.0" text="%verifications.common.columns.pattern" />
				<TableColumn fx:id="patternDescriptionColumn" minWidth="120.0" text="%verifications.common.columns.description" />
			</columns>
			<placeholder>
				<Label text="%verifications.ltl.ltlView.noPattern" />
			</placeholder>
		</TableView>
	</VBox>
</fx:root>
