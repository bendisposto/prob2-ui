<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.verifications.ltl.LTLView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>
<?import de.prob2.ui.verifications.ltl.MachineTableView?>


<?import javafx.scene.control.Tooltip?>
<fx:root stylesheets="@/prob.css" type="LTLView" minHeight="0.0" minWidth="0.0" prefHeight="339.0" prefWidth="145.0" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<Button fx:id="addFormulaButton" disable="true" prefHeight="26.0" prefWidth="140.0"
			AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="10.0" onAction ="#addFormula" styleClass="button-blue" text="Add LTL Formula">
		</Button>
		<Button fx:id="addPatternButton" disable="true" prefHeight="26.0" prefWidth="140.0"
			AnchorPane.rightAnchor="190.0" AnchorPane.topAnchor="10.0" onAction ="#addPattern" styleClass="button-blue" text="Add LTL Pattern">
		</Button>
		<Button fx:id="checkSelectedMachineButton" disable="true" text="%verifications.ltl.checkSelectedMachine"
				prefHeight="26.0" prefWidth="180.0" AnchorPane.leftAnchor="0.0" 
				AnchorPane.topAnchor="10.0" onAction ="#checkSelectedMachine" styleClass="button-blue"/>
		<Button fx:id="help" AnchorPane.rightAnchor="-8" AnchorPane.topAnchor="5"
				prefHeight="33.0" prefWidth="33.0" contentDisplay="GRAPHIC_ONLY"
				onAction="#openHelp">
			<graphic>
				<FontAwesomeIconView fill="#555560" glyphName="QUESTION_CIRCLE" size="33" />
			</graphic>
			<tooltip>
				<Tooltip text="%menu.help" />
			</tooltip>
		</Button>
		<AnchorPane styleClass="border" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
			<MachineTableView fx:id="tvMachines" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
			<TableView fx:id="tvFormula" prefHeight ="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="150.0">
				<columnResizePolicy>
					<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
				</columnResizePolicy>
				<columns>
					<TableColumn fx:id="formulaStatusColumn" minWidth="80.0" maxWidth="80.0"
						prefWidth="80.0" text="%verifications.ltl.columns.status" />
					<TableColumn fx:id="formulaNameColumn" minWidth="120.0" maxWidth = "240.0"
						prefWidth="120.0" text="%verifications.ltl.formula.columns.name" />
					<TableColumn fx:id="formulaDescriptionColumn" minWidth="120.0"
						prefWidth="120.0" text="%verifications.ltl.columns.description" />
				</columns>
				<placeholder>
					<Label text="%verifications.ltl.formula.noFormulas" />
				</placeholder>
			</TableView>
			<TableView fx:id="tvPattern" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="350.0">
				<columnResizePolicy>
					<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
				</columnResizePolicy>
				<columns>
					<TableColumn fx:id="patternStatusColumn" minWidth="80.0" maxWidth="80.0"
						prefWidth="80.0" text="%verifications.ltl.columns.status" />
					<TableColumn fx:id="patternNameColumn" minWidth="120.0" maxWidth = "240.0"
						prefWidth="240.0" text="%verifications.ltl.pattern.columns.name" />
					<TableColumn fx:id="patternDescriptionColumn" minWidth="120.0"
						prefWidth="120.0" text="%verifications.ltl.columns.description" />
				</columns>
				<placeholder>
					<Label text="%verifications.ltl.pattern.noPattern" />
				</placeholder>
			</TableView>	
		</AnchorPane>
	</children>
</fx:root>
