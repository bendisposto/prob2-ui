<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.verifications.ltl.LTLView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="LTLView" fitToHeight="true" fitToWidth="true"
	stylesheets="@/prob.css" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize" />
	</fx:define>
	<AnchorPane>
		<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="6.0" spacing="2.0">
			<HBox alignment="CENTER_LEFT">
				<Button fx:id="checkMachineButton" disable="true" onAction="#checkMachine">
					<graphic>
						<FontAwesomeIconView styleClass="icon-dark"
							glyphName="CHECK_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
					</graphic>
					<tooltip>
						<Tooltip text="%verifications.checkMachine" />
					</tooltip>
				</Button>
				<Button fx:id="cancelButton" onAction="#cancel">
					<graphic>
						<FontAwesomeIconView styleClass="icon-dark"
							glyphName="TIMES_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
					</graphic>
					<tooltip>
						<Tooltip text="%verifications.cancel" />
					</tooltip>
				</Button>
				<HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
					<HelpButton fx:id="helpButton" />
				</HBox>
				<VBox.margin>
					<Insets bottom="0.0" left="10.0" right="0.0" top="5.0" />
				</VBox.margin>
			</HBox>
			<HBox spacing="5.0" alignment="CENTER_RIGHT">
				<VBox spacing="5.0" alignment="TOP_RIGHT">
					<Button fx:id="addFormulaButton" disable="true" onAction="#addFormula"
						prefWidth="140.0" styleClass="button-blue" text="%verifications.ltl.formula.add">
					</Button>
					<Button fx:id="addPatternButton" disable="true" onAction="#addPattern"
						prefWidth="140.0" styleClass="button-blue" text="%verifications.ltl.pattern.add">
					</Button>
				</VBox>
				<VBox.margin>
					<Insets left="5" right="5" />
				</VBox.margin>
			</HBox>
			<VBox styleClass="border" spacing="0.0">
				<TableView fx:id="tvFormula" minHeight="150">
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
					<columns>
						<TableColumn fx:id="shouldExecuteColumn" minWidth="40.0"
							prefWidth="40.0" maxWidth="40.0" text="" />
						<TableColumn fx:id="formulaStatusColumn" minWidth="80.0"
							maxWidth="80.0" prefWidth="80.0" text="%verifications.columns.status" />
						<TableColumn fx:id="formulaNameColumn" minWidth="120.0"
							maxWidth="240.0" prefWidth="120.0" text="%verifications.formula.columns.name" />
						<TableColumn fx:id="formulaDescriptionColumn"
							minWidth="120.0" prefWidth="120.0" text="%verifications.columns.description" />
					</columns>
					<placeholder>
						<Label text="%verifications.ltl.formula.noFormulas" />
					</placeholder>
				</TableView>
				<TableView fx:id="tvPattern" minHeight="150">
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
					<columns>
						<TableColumn fx:id="patternStatusColumn" minWidth="80.0"
							maxWidth="80.0" prefWidth="80.0" text="%verifications.columns.status" />
						<TableColumn fx:id="patternNameColumn" minWidth="120.0"
							maxWidth="240.0" prefWidth="240.0"
							text="%verifications.ltl.pattern.columns.name" />
						<TableColumn fx:id="patternDescriptionColumn"
							minWidth="120.0" prefWidth="120.0" text="%verifications.columns.description" />
					</columns>
					<placeholder>
						<Label text="%verifications.ltl.pattern.noPattern" />
					</placeholder>
				</TableView>
			</VBox>
		</VBox>
	</AnchorPane>
</fx:root>
