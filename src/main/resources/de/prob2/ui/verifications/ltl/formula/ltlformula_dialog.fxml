<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<fx:root type="Dialog" title="%verifications.ltl.dialog.formula.title"
		 xmlns:fx="http://javafx.com/fxml/1">
	<dialogPane>
		<DialogPane stylesheets="@/prob.css">
			<header>
				<AnchorPane>
					<Label text="%verifications.ltl.dialog.formula.title" id="title"
						AnchorPane.topAnchor="14" AnchorPane.bottomAnchor="5"
						AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" />
				</AnchorPane>
			</header>
			<content>
				<AnchorPane styleClass="border">
					<VBox spacing="20" AnchorPane.leftAnchor="15"
						AnchorPane.rightAnchor="15" AnchorPane.topAnchor="20"
						AnchorPane.bottomAnchor="20" alignment="center_right">
						<HBox spacing="20" alignment="center_left">
							<Label text="%verifications.ltl.dialog.enterFormula" />
							<TextField fx:id="tfName" HBox.hgrow="always" />
						</HBox>
						<VBox spacing="10" alignment="center_left">
							<Label text="%verifications.ltl.dialog.formula" />
							<WebView fx:id="taCode"/>
						</VBox>
						<VBox spacing="10" alignment="center_left">
							<Label text="%verifications.ltl.dialog.description" />
							<TextArea fx:id="taDescription" styleClass="text-area-with-border" maxHeight="15"/>
						</VBox>
					</VBox>
				</AnchorPane>
			</content>
			<ButtonType buttonData="CANCEL_CLOSE" text="%common.cancel" />
			<ButtonType fx:id="okButtonType" buttonData="OK_DONE"
				text="%common.ok" />
		</DialogPane>
	</dialogPane>
</fx:root>
