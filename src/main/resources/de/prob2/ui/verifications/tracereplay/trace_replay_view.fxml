<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.verifications.tracereplay.TraceReplayView ?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.layout.FontSize?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root type="TraceReplayView" fitToHeight="true" fitToWidth="true"
	stylesheets="@/prob.css" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize"/>
	</fx:define>
	<AnchorPane>
		<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="6.0" spacing="2.0">
			<HBox alignment="CENTER_LEFT">
				<Button fx:id="checkButton" onAction="#checkMachine" mnemonicParsing="false" disable="true">
					<graphic>
						<FontAwesomeIconView styleClass="icon-dark" glyphName="CHECK_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
					</graphic>
					<tooltip>
						<Tooltip text="%verifications.checkMachine" />
					</tooltip>
				</Button>
				<Button fx:id="cancelButton" onAction="#cancel" mnemonicParsing="false" disable="true">
					<graphic>
						<FontAwesomeIconView styleClass="icon-dark" glyphName="TIMES_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
					</graphic>
					<tooltip>
						<Tooltip text="%common.cancel" />
					</tooltip>
				</Button>
				<HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
					<Button fx:id="loadTraceButton" onAction="#loadTraceFromFile" mnemonicParsing="false" disable="true">
						<graphic>
							<FontAwesomeIconView styleClass="icon-dark" glyphName="FOLDER_OPEN" glyphSize="${fontSize.fontSize + 2}" />
						</graphic>
						<tooltip>
							<Tooltip text="%verifications.tracereplay.loadTrace" />
						</tooltip>
					</Button>
					<HelpButton fx:id="helpButton" />
				</HBox>
				<VBox.margin>
					<Insets bottom="0.0" left="10.0" right="0.0" top="5.0" />
				</VBox.margin>
			</HBox>
			<TableView fx:id="traceTableView" VBox.vgrow="ALWAYS">
				<columnResizePolicy>
					<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
				</columnResizePolicy>
				<columns>
					<TableColumn fx:id="statusColumn" style="-fx-alignment: CENTER;" minWidth="${fontSize.fontSize * 6}" maxWidth="${fontSize.fontSize * 6}" text="%verifications.columns.status" />
					<TableColumn fx:id="nameColumn" text="%verifications.columns.name" />
				</columns>
				<placeholder>
					<Label text="%verifications.tracereplay.placeholder" />
				</placeholder>
			</TableView>
		</VBox>
	</AnchorPane>
</fx:root>

