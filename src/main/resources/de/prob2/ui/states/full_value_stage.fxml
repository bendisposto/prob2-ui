<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Region?>
<fx:root type="Stage" minWidth="240" minHeight="160" width="480"
	height="320" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<ToggleGroup fx:id="asciiUnicodeGroup"/>
	</fx:define>
	<scene>
		<Scene>
			<BorderPane maxWidth="Infinity" maxHeight="Infinity"
				stylesheets="@/prob.css" styleClass="dialog">
				<padding>
					<Insets top="30.0" right="0.0" bottom="10.0" left="0.0" />
				</padding>
				<center>
					<TextArea fx:id="textarea" editable="false" wrapText="true"
						maxWidth="Infinity" maxHeight="Infinity" />
				</center>
				<bottom>
					<HBox spacing="10.0">
						<padding>
							<Insets top="10.0" left="15.0" right="15.0"/>
						</padding>
						<RadioButton fx:id="asciiRadio" selected="true" text="ASCII"
							HBox.hgrow="NEVER" toggleGroup="$asciiUnicodeGroup" onAction="#updateText"/>
						<RadioButton fx:id="unicodeRadio" text="Unicode"
							HBox.hgrow="NEVER" toggleGroup="$asciiUnicodeGroup" onAction="#updateText"/>
						<Region minWidth="-Infinity" maxWidth="Infinity" minHeight="-Infinity"
							maxHeight="Infinity" HBox.hgrow="ALWAYS" />
						<Button fx:id="saveAsButton" text="Save As..." alignment="CENTER_RIGHT"
							HBox.hgrow="NEVER" onAction="#saveAs" />
					</HBox>
				</bottom>
			</BorderPane>
		</Scene>
	</scene>
</fx:root>
