<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.consoles.b.BConsole?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.states.StatesView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.fxmisc.flowless.VirtualizedScrollPane?>
<fx:root type="StatesView" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize"/>
	</fx:define>
	<SplitPane orientation="VERTICAL" dividerPositions="0.9">
		<VBox minWidth="240" minHeight="240">
			<HBox spacing="10.0" alignment="CENTER">
				<padding>
					<Insets topRightBottomLeft="10.0"/>
				</padding>
				<Button fx:id="searchButton" styleClass="button-dark" alignment="CENTER" onAction="#handleSearchButton" HBox.hgrow="NEVER" prefHeight="${searchButton.width}">
					<graphic>
						<FontAwesomeIconView glyphName="SEARCH" styleClass="icon-basic" glyphSize="${fontSize.fontSize}"/>
					</graphic>
				</Button>
				<TextField fx:id="filterState" onAction="#handleSearchButton" promptText="%states.search.prompt" HBox.hgrow="ALWAYS" />
				<HelpButton fx:id="helpButton" HBox.hgrow="NEVER"/>
			</HBox>
			<TreeTableView fx:id="tv" VBox.vgrow="ALWAYS" showRoot="false">
				<columnResizePolicy>
					<TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
				</columnResizePolicy>
				<columns>
					<TreeTableColumn fx:id="tvName" id="name" editable="false" minWidth="80.0" prefWidth="240" sortable="false" text="%states.columns.name" />
					<TreeTableColumn fx:id="tvValue" id="value" editable="false" minWidth="80.0" prefWidth="240" sortable="false" text="%states.columns.value" />
					<TreeTableColumn fx:id="tvPreviousValue" id="previousValue" editable="false" minWidth="80.0" prefWidth="240" sortable="false" text="%states.columns.previousValue" />
				</columns>
				<placeholder>
					<Label text="%common.noModelLoaded"/>
				</placeholder>
				<TreeItem fx:id="tvRootItem" expanded="true" />
			</TreeTableView>
		</VBox>
		<VirtualizedScrollPane>
			<content>
				<BConsole/>
			</content>
		</VirtualizedScrollPane>
	</SplitPane>
</fx:root>
