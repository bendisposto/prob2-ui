<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.internal.Spacer?>
<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.animation.symbolic.SymbolicAnimationView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="SymbolicAnimationView" fitToHeight="true" fitToWidth="true"
	stylesheets="@/prob.css" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize" />
	</fx:define>
	<VBox>
		<HBox styleClass="border" alignment="CENTER">
			<Button fx:id="checkMachineButton" onAction="#checkMachine">
				<graphic>
					<FontAwesomeIconView styleClass="icon-dark"
						glyphName="CHECK_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
				</graphic>
				<tooltip>
					<Tooltip text="%verifications.checkMachine" />
				</tooltip>
			</Button>
			<Button fx:id="cancelButton" onAction="#cancel">
				<graphic>
					<FontAwesomeIconView styleClass="icon-dark"
						glyphName="TIMES_CIRCLE_ALT" glyphSize="${fontSize.fontSize * 2}" />
				</graphic>
				<tooltip>
					<Tooltip text="%common.buttons.cancel" />
				</tooltip>
			</Button>
			<Spacer/>
			<Button fx:id="addFormulaButton" disable="true" onAction="#addFormula"
				contentDisplay="GRAPHIC_ONLY">
				<graphic>
					<FontAwesomeIconView styleClass="icon-dark"
						glyphName="PLUS_CIRCLE" glyphSize="${fontSize.fontSize * 2}" />
				</graphic>
			</Button>
			<HelpButton fx:id="helpButton" />
		</HBox>
		<TableView fx:id="tvFormula" VBox.vgrow="ALWAYS">
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
			<columns>
				<TableColumn fx:id="shouldExecuteColumn" sortable="false" style="-fx-alignment: CENTER;" minWidth="${fontSize.fontSize * 4}" maxWidth="${fontSize.fontSize * 4}"/>
				<TableColumn fx:id="formulaStatusColumn" style="-fx-alignment: CENTER;" minWidth="${fontSize.fontSize * 6}" maxWidth="${fontSize.fontSize * 6}" text="%verifications.columns.status" />
				<TableColumn fx:id="formulaNameColumn" minWidth="140.0"
					prefWidth="240.0" text="%verifications.formula" />
				<TableColumn fx:id="formulaDescriptionColumn" minWidth="180.0"
					prefWidth="180.0" text="%verifications.columns.description" />
			</columns>
			<placeholder>
				<Label text="%verifications.symbolic.formula.noFormulas" />
			</placeholder>
		</TableView>
	</VBox>
</fx:root>
