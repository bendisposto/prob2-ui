<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.*?>
<?import de.prob2.ui.animation.symbolic.SymbolicAnimationFormulaInput?>
<?import de.prob2.ui.internal.PredicateBuilderView?>


<fx:root type="SymbolicAnimationFormulaInput" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1">
	<StackPane fx:id="optionsPane" VBox.vgrow="ALWAYS">
		<TextField fx:id="tfFormula"/>
		<ChoiceBox fx:id="cbOperations"/>
		<PredicateBuilderView fx:id="predicateBuilderView"/>
	</StackPane>
	<HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
		<Button fx:id="btAdd" text="%verifications.symbolic.add" styleClass="button-blue"/>
		<Button fx:id="btCheck" text="%verifications.symbolic.check" styleClass="button-blue"/>
		<Button fx:id="btCancel" onAction="#cancel" text="%common.buttons.cancel" styleClass="button-blue"/>
	</HBox>
</fx:root>
