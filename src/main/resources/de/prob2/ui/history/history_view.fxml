<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.internal.NavigationButtons?>
<?import de.prob2.ui.layout.FontSize?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<fx:root stylesheets="@/prob.css" type="AnchorPane" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize" />
	</fx:define>
	<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
		AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="15.0" spacing="10.0">
		<AnchorPane>
			<HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="8.0"
				AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="0.0" alignment="CENTER_LEFT">
				<NavigationButtons/>
				<Region minWidth="0" minHeight="0" maxWidth="Infinity" maxHeight="Infinity" HBox.hgrow="ALWAYS"/>
				<Button fx:id="saveTraceButton" mnemonicParsing="false" onAction="#saveTrace">
					<graphic>
						<FontAwesomeIconView styleClass="icon-dark"
							glyphName="SAVE" glyphSize="${fontSize.fontSize + 2}" />
					</graphic>
					<tooltip>
						<Tooltip text="%history.buttons.saveTrace.tooltip" />
					</tooltip>
				</Button>
				<HelpButton fx:id="helpButton" />
			</HBox>
		</AnchorPane>
		<AnchorPane VBox.vgrow="ALWAYS">
			<TableView fx:id="historyTableView" AnchorPane.bottomAnchor="0.0"
				AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
				AnchorPane.topAnchor="0.0">
				<columnResizePolicy>
					<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
				</columnResizePolicy>
				<columns>
					<TableColumn fx:id="positionColumn" minWidth="${fontSize.fontSize * 6}"
						maxWidth="${fontSize.fontSize * 6}" text="%history.tableView.position" />
					<TableColumn fx:id="transitionColumn" text="%history.tableView.transition" sortable="false" />
				</columns>
				<sortOrder>
					<fx:reference source="positionColumn" />
				</sortOrder>
				<placeholder>
					<Label text="%common.noModelLoaded" />
				</placeholder>
			</TableView>
		</AnchorPane>
	</VBox>
</fx:root>
