<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.Insets?>
<?import de.prob2.ui.dotty.DotView?>
<?import de.prob2.ui.dotty.DotChoiceItem?>
<?import javafx.scene.Scene?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.HBox?>

<fx:root type="DotView" title="Graph Visualization" minWidth="240" minHeight="160" width="600.0" height="400.0" xmlns:fx="http://javafx.com/fxml/1">
	<scene>
		<Scene stylesheets="@/prob.css">
			<StackPane>
				<children>
					<ScrollPane fx:id ="pane" fitToHeight="true" fitToWidth="true">
   						<content>
   							<VBox alignment="CENTER" spacing="30.0" prefHeight="50.0" prefWidth="200.0">
   								<HBox alignment="CENTER" prefHeight="47.0" prefWidth="200.0">
	   								<VBox.margin>
										<Insets top="30"/>
									</VBox.margin>
		   							<ChoiceBox fx:id="cbChoice" prefWidth="250.0">
						           		<items>
											<FXCollections fx:factory="observableArrayList">
												<DotChoiceItem visualisationType="STATE_SPACE" hasFormula = "false"/>
												<DotChoiceItem visualisationType="DFA_MERGE" hasFormula = "false"/>
											    <DotChoiceItem visualisationType="STATE_AS_GRAPH" hasFormula = "false"/>
											    <DotChoiceItem visualisationType="INVARIANT" hasFormula = "false"/>
											    <DotChoiceItem visualisationType="PROPERTIES" hasFormula = "false"/>
											    <DotChoiceItem visualisationType="ASSERTIONS" hasFormula = "false"/>
											    <DotChoiceItem visualisationType="DEADLOCK" hasFormula = "false"/>
											    <DotChoiceItem visualisationType="GOAL" hasFormula = "false"/>
											    <DotChoiceItem visualisationType="LAST_ERROR" hasFormula = "false"/>
											    <DotChoiceItem visualisationType="ENABLE_GRAPH" hasFormula = "false"/>
											    <DotChoiceItem visualisationType="DEPENDENCE_GRAPH" hasFormula = "false"/>
											    <DotChoiceItem visualisationType="DEFINITIONS" hasFormula = "false"/>
											    <DotChoiceItem visualisationType="EXPR_AS_GRAPH" hasFormula = "true"/>
											    <DotChoiceItem visualisationType="FORMULA_TREE" hasFormula = "true"/>
											    <DotChoiceItem visualisationType="TRANSITION_DIAGRAM" hasFormula = "true"/>
											    <DotChoiceItem visualisationType="PREDICATE_DEPENDENCY" hasFormula = "true"/>
											 </FXCollections>
										</items>
						           	</ChoiceBox>
						           	
					           	</HBox>
					           	<HBox alignment="CENTER">
					           		<Button fx:id="visualizeButton" disable="false" onAction="#visualize"
					           			text = "Visualize" styleClass="button-blue" prefWidth="130.0"/>
					           	</HBox>
					       		<HBox alignment="CENTER">
									<TextField fx:id="tfFormula" visible="false" HBox.hgrow="ALWAYS"/>
					           	</HBox>
					           	<HBox alignment="CENTER">
					           		<WebView fx:id="dotView" HBox.hgrow="ALWAYS"/>
					           	</HBox>
				           	</VBox>
  						 </content>
					</ScrollPane>
				</children>
			</StackPane>
		</Scene>
	</scene>
</fx:root>
