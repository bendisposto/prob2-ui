<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.Insets?>
<?import de.prob2.ui.dotty.DotView?>
<?import de.prob2.ui.dotty.DotChoiceItem?>
<?import javafx.scene.Scene?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.HBox?>

<fx:root type="DotView" title="%dotview.header" minWidth="240" minHeight="160" width="600.0" height="400.0" xmlns:fx="http://javafx.com/fxml/1">
	<scene>
		<Scene stylesheets="@/prob.css">
			<AnchorPane>
				<children>
   					<VBox alignment="TOP_CENTER" prefWidth="Infinity" prefHeight="Infinity" spacing="30.0" AnchorPane.bottomAnchor="0.0"
						AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
						AnchorPane.topAnchor="0.0">
   						<HBox alignment="TOP_CENTER" VBox.vgrow="NEVER">
	   						<VBox.margin>
								<Insets top="30"/>
							</VBox.margin>
		   					<ChoiceBox fx:id="cbChoice" prefWidth="250.0"/>
					     </HBox>
					     <HBox fx:id="enterFormulaBox" visible="false" VBox.vgrow="NEVER" alignment="CENTER">
					     	<Label text="%dotview.enterFormula" HBox.hgrow="NEVER" />
							<TextField fx:id="tfFormula" HBox.hgrow="ALWAYS"/>
					     </HBox>
					     <Button fx:id="visualizeButton" disable="false" onAction="#visualize"
					           text = "Visualize" styleClass="button-blue" prefWidth="130.0" VBox.vgrow="NEVER"/>
					     <ScrollPane fx:id ="pane" fitToHeight="true" fitToWidth="true" styleClass="border" VBox.vgrow="ALWAYS">
		   					<content>
							   <WebView fx:id="dotView"/>
							</content>
						</ScrollPane>
				     </VBox>
				</children>
			</AnchorPane>
		</Scene>
	</scene>
</fx:root>
