<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import de.prob2.ui.menu.*?>
<?import javafx.scene.control.CheckBox?>

<fx:root type="Stage" xmlns:fx="http://javafx.com/fxml/1"
	title="%visualisation.magicLayout.view.title">
	<scene>
		<Scene stylesheets="@/prob.css">
			<BorderPane>
				<top>
					<MenuBar fx:id="menuBar" BorderPane.alignment="CENTER">
						<Menu text="%menu.file">
							<MenuItem text="Save Layout..." />
						</Menu>
						<ViewMenu fx:id="viewMenu" />
					</MenuBar>
				</top>
				<center>
					<SplitPane dividerPositions="0.15">
						<TabPane side="LEFT" prefWidth="200">
							<Tab text="Nodes" closable="false">
								<VBox spacing="10">
									<ListView prefHeight="200" VBox.vgrow="NEVER">
										<Label text="nodes1" />
										<Label text="nodes2" />
										<Label text="nodes3" />
										<Label text="nodes4" />
										<Label text="nodes5" />
										<Label text="nodes6" />
										<Label text="nodes7" />
										<Label text="nodes8" />
									</ListView>
									<TextArea promptText="{x| ...}" VBox.vgrow="ALWAYS"
										styleClass="text-area-with-border">
										<VBox.margin>
											<Insets left="5.0" right="5.0" />
										</VBox.margin>
									</TextArea>
									<CheckBox text="Cluster">
										<VBox.margin>
											<Insets left="10.0" right="5.0" />
										</VBox.margin>
									</CheckBox>
									<FlowPane VBox.vgrow="NEVER">
										<Button text="line" />
										<Button text="shape" />
										<Button text="color" />
									</FlowPane>
									<padding>
										<Insets bottom="20.0" />
									</padding>
								</VBox>
							</Tab>
							<Tab text="Edges" closable="false">
								<VBox spacing="10">
									<ListView prefHeight="200" VBox.vgrow="NEVER">
										<Label text="edges1" />
									</ListView>
									<TextArea promptText="{x,y| ...}" VBox.vgrow="ALWAYS"
										styleClass="text-area-with-border">
										<VBox.margin>
											<Insets left="5.0" right="5.0" />
										</VBox.margin>
									</TextArea>
									<FlowPane VBox.vgrow="NEVER">
										<Button text="linetype" />
										<Button text="thickness" />
										<Button text="color" />
										<Button text="font" />
										<Button text="fontsize" />
									</FlowPane>
									<padding>
										<Insets bottom="20.0" />
									</padding>
								</VBox>
							</Tab>
						</TabPane>
						<Label text="MAGIC LAYOUT GRAPH" prefWidth="600" alignment="CENTER" />
					</SplitPane>
				</center>
			</BorderPane>
		</Scene>
	</scene>
</fx:root>

