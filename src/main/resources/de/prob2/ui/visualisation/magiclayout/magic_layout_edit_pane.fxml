<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.*?>
<?import java.lang.String?>
<?import java.lang.Double?>

<fx:root type="VBox" spacing="10"
	xmlns:fx="http://javafx.com/fxml/1">
	<ListView fx:id="listView" prefHeight="200" VBox.vgrow="NEVER"
		onMouseClicked="#updateValues" />
	<TextArea fx:id="expressionTextArea" VBox.vgrow="ALWAYS"
		styleClass="text-area-with-border">
		<VBox.margin>
			<Insets left="5.0" right="5.0" />
		</VBox.margin>
	</TextArea>
	<FlowPane fx:id="flowPane" VBox.vgrow="NEVER" hgap="5"
		vgap="5">
		<VBox spacing="2">
			<Label text="%visualisation.magicLayout.editPane.labels.linetype">
				<VBox.margin>
					<Insets left="2.0" right="2.0" />
				</VBox.margin>
			</Label>
			<ComboBox fx:id="lineTypeComboBox" focusTraversable="false"
				prefWidth="110">
				<items>
					<FXCollections fx:factory="observableArrayList">
						<String fx:value="" />
						<String fx:value="-fx-stroke-dash-array: 12 4 5 4;" />
						<String fx:value="-fx-stroke-dash-array: 2 2 2 2;" />
					</FXCollections>
				</items>
			</ComboBox>
		</VBox>
		<VBox spacing="2">
			<Label text="%visualisation.magicLayout.editPane.labels.linecolor">
				<VBox.margin>
					<Insets left="2.0" right="2.0" />
				</VBox.margin>
			</Label>
			<ColorPicker fx:id="lineColorPicker" prefWidth="110" />
		</VBox>
		<VBox spacing="2">
			<Label text="%visualisation.magicLayout.editPane.labels.linewidth">
				<VBox.margin>
					<Insets left="2.0" right="2.0" />
				</VBox.margin>
			</Label>
			<ComboBox fx:id="lineWidthComboBox"
				focusTraversable="false" prefWidth="110">
				<items>
					<FXCollections fx:factory="observableArrayList">
						<Double fx:value="0.5" />
						<Double fx:value="1" />
						<Double fx:value="2" />
						<Double fx:value="5" />
					</FXCollections>
				</items>
			</ComboBox>
		</VBox>
		<VBox.margin>
			<Insets left="5.0" right="5.0" />
		</VBox.margin>
	</FlowPane>
	<padding>
		<Insets bottom="20.0" />
	</padding>
</fx:root>
