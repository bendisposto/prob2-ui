<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.layout.BindableGlyph?>
<?import de.prob2.ui.layout.FontSize?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<fx:root type="Button" onAction="#openHelp" stylesheets="@/prob.css" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize"/>
	</fx:define>
	<graphic>
		<BindableGlyph styleClass="icon-dark" fontFamily="FontAwesome" icon="QUESTION_CIRCLE" bindableFontSize="${fontSize.fontSize * 2}"/>
	</graphic>
	<tooltip>
		<Tooltip text="%menu.help" />
	</tooltip>
</fx:root>
