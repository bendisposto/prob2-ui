<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>

<fx:root minHeight="70.0" minWidth="200" stylesheets="@/prob.css"
	type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
	<StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
		AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
		<Button fx:id="newProjectButton" text="%menu.file.items.newProject"
			onAction="#createNewProject" styleClass="button-blue" />
	</StackPane>
	<TabPane fx:id="projectTabPane" AnchorPane.topAnchor="0"
		AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
		AnchorPane.rightAnchor="0" minWidth="300">
		<Tab text="%project.tabs.project" closable="false">
			<VBox spacing="0">
				<AnchorPane styleClass="border">
					<Label fx:id="projectNameLabel" AnchorPane.leftAnchor="6"
						AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="4">
						<font>
							<Font size="18" />
						</font>
					</Label>
					<TextField fx:id="projectNameTextField"
						AnchorPane.leftAnchor="6" AnchorPane.topAnchor="10"
						AnchorPane.bottomAnchor="4" managed="false" visible="false">
						<font>
							<Font size="14" />
						</font>
					</TextField>
				</AnchorPane>
				<ScrollPane hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
					<AnchorPane>
						<Text fx:id="projectDescriptionText" AnchorPane.leftAnchor="6"
							AnchorPane.topAnchor="6" AnchorPane.rightAnchor="0"
							AnchorPane.bottomAnchor="0" />
					</AnchorPane>
				</ScrollPane>
			</VBox>
		</Tab>
		<Tab text="%project.tabs.machines" closable="false">
			<VBox spacing="0">
				<AnchorPane styleClass="border">
					<Button prefHeight="26.0" prefWidth="26.0" contentDisplay="GRAPHIC_ONLY"
						AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" onAction="#addMachine">
						<graphic>
							<FontAwesomeIconView fill="#555560"
								glyphName="PLUS_CIRCLE" size="26" />
						</graphic>
					</Button>
				</AnchorPane>
				<TableView fx:id="machinesTable" VBox.vgrow="always">
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
					<columns>
						<TableColumn fx:id="nameColumn" minWidth="100.0"
							prefWidth="100.0" text="%project.tabs.machines.columns.name" />
						<TableColumn fx:id="machineColumn" minWidth="100.0"
							prefWidth="100.0" text="%project.tabs.machines.columns.machine" />
						<TableColumn fx:id="descriptionColumn" minWidth="100.0"
							prefWidth="100.0" text="%project.tabs.machines.columns.description" />
					</columns>
					<placeholder>
						<Label text="%project.tabs.machines.noMachines" />
					</placeholder>
				</TableView>
			</VBox>
		</Tab>
		<Tab text="%project.tabs.preferences" closable="false">
			<VBox spacing="0">
				<AnchorPane styleClass="border">
					<Button prefHeight="26.0" prefWidth="26.0" contentDisplay="GRAPHIC_ONLY"
						AnchorPane.rightAnchor="0" AnchorPane.topAnchor="10" onAction="#addPreference">
						<graphic>
							<FontAwesomeIconView fill="#555560"
								glyphName="PLUS_CIRCLE" size="26" />
						</graphic>
					</Button>
				</AnchorPane>
				<ListView fx:id="preferencesListView" VBox.vgrow="always"
					styleClass="no-border">
					<placeholder>
						<Label text="%project.tabs.preferences.noPreferences" />
					</placeholder>
				</ListView>
			</VBox>
		</Tab>
		<Tab text="%project.tabs.runconfigurations" closable="false">
			<VBox spacing="0">
				<AnchorPane styleClass="border">
					<Button fx:id="addRunconfigButton" prefHeight="26.0"
						prefWidth="26.0" contentDisplay="GRAPHIC_ONLY"
						AnchorPane.rightAnchor="0" AnchorPane.topAnchor="10"
						onAction="#addRunconfiguration" disable="true">
						<graphic>
							<FontAwesomeIconView fill="#555560"
								glyphName="PLUS_CIRCLE" size="26" />
						</graphic>
					</Button>
				</AnchorPane>
				<ListView fx:id="runconfigurationsListView" VBox.vgrow="always"
					styleClass="no-border">
					<placeholder>
						<Label fx:id="runconfigsPlaceholder"
							text="%project.tabs.runconfigurations.noRunconfigurations" />
					</placeholder>
				</ListView>
			</VBox>
		</Tab>
	</TabPane>
</fx:root>
