<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.layout.FontSize?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="Tab" text="%project.preferences.tab.title"
	closable="false" xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize"/>
	</fx:define>
	<VBox stylesheets="@/prob.css" spacing="0">
		<HBox alignment="CENTER_RIGHT">
			<AnchorPane styleClass="border" HBox.hgrow="ALWAYS">
				<Button prefHeight="26.0" prefWidth="26.0" contentDisplay="GRAPHIC_ONLY"
					AnchorPane.rightAnchor="0" AnchorPane.topAnchor="10" onAction="#addPreference">
					<graphic>
						<FontAwesomeIconView styleClass="icon-dark" glyphName="PLUS_CIRCLE" glyphSize="${fontSize.fontSize * 2}" />
					</graphic>
				</Button>
			</AnchorPane>
			<AnchorPane styleClass="border">
				<HelpButton fx:id="helpButton" AnchorPane.topAnchor="10" />
			</AnchorPane>
		</HBox>
		<SplitPane fx:id="splitPane" VBox.vgrow="always">
			<ListView fx:id="preferencesListView" styleClass="no-border">
				<placeholder>
					<Label text="%project.preferences.tab.noPreferences" />
				</placeholder>
			</ListView>
		</SplitPane>
	</VBox>
</fx:root>

