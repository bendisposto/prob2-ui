<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="Tab" text="%project.preferences.tab.title" closable="false"
		 xmlns:fx="http://javafx.com/fxml/1">
	<VBox stylesheets="@/prob.css" spacing="0">
		<HBox alignment="CENTER_RIGHT">
			<AnchorPane styleClass="border" HBox.hgrow="ALWAYS">
				<Button fx:id="addPreferenceButton" prefHeight="26.0"
						prefWidth="26.0" contentDisplay="GRAPHIC_ONLY"
						AnchorPane.rightAnchor="0" AnchorPane.topAnchor="10" onAction="#addPreference">
					<graphic>
						<FontAwesomeIconView fill="#555560" glyphName="PLUS_CIRCLE" />
					</graphic>
				</Button>
			</AnchorPane>
			<AnchorPane styleClass="border">
				<HelpButton fx:id="helpButton" AnchorPane.topAnchor="10"/>
			</AnchorPane>
		</HBox>
		<SplitPane fx:id="splitPane">
			<ListView fx:id="preferencesListView" styleClass="no-border">
				<placeholder>
					<Label text="%project.preferences.tab.noPreferences" />
				</placeholder>
			</ListView>
		</SplitPane>
	</VBox>
</fx:root>

