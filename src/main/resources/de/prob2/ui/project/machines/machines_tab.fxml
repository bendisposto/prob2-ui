<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Label?>

<fx:root type="Tab" text="%project.tabs.machines" closable="false" 
	xmlns:fx="http://javafx.com/fxml/1">
	<VBox stylesheets="@/prob.css" spacing="0">
		<AnchorPane styleClass="border">
			<Button prefHeight="26.0" prefWidth="26.0" contentDisplay="GRAPHIC_ONLY"
				AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" onAction="#addMachine">
				<graphic>
					<FontAwesomeIconView fill="#555560" glyphName="PLUS_CIRCLE"
						size="26" />
				</graphic>
			</Button>
		</AnchorPane>
		<TableView fx:id="machinesTable" VBox.vgrow="always">
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
			<columns>
				<TableColumn fx:id="nameColumn" minWidth="100.0"
					prefWidth="100.0" text="%project.tabs.machines.columns.name" />
				<TableColumn fx:id="machineColumn" minWidth="100.0"
					prefWidth="100.0" text="%project.tabs.machines.columns.machine" />
				<TableColumn fx:id="descriptionColumn" minWidth="100.0"
					prefWidth="100.0" text="%project.tabs.machines.columns.description" />
			</columns>
			<placeholder>
				<Label text="%project.tabs.machines.noMachines" />
			</placeholder>
		</TableView>
	</VBox>
</fx:root>
