<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import de.prob2.ui.helpsystem.HelpButton?>
<?import de.prob2.ui.layout.FontSize?>
<?import de.prob2.ui.project.machines.MachinesTab?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<fx:root type="MachinesTab" text="%project.machines.tab.title" closable="false"
	xmlns:fx="http://javafx.com/fxml/1">
	<fx:define>
		<FontSize fx:id="fontSize"/>
	</fx:define>
	<VBox stylesheets="@/prob.css">
		<HBox alignment="CENTER_RIGHT">
			<AnchorPane styleClass="border" HBox.hgrow="ALWAYS">
				<Button contentDisplay="GRAPHIC_ONLY"
					AnchorPane.rightAnchor="0" AnchorPane.topAnchor="10" onAction="#addMachine">
					<graphic>
						<FontAwesomeIconView styleClass="icon-dark" glyphName="PLUS_CIRCLE" glyphSize="${fontSize.fontSize * 2}"/>
					</graphic>
				</Button>
			</AnchorPane>
			<AnchorPane styleClass="border">
				<HelpButton fx:id="helpButton" AnchorPane.topAnchor="10" />
			</AnchorPane>
		</HBox>
		<SplitPane fx:id="splitPane" VBox.vgrow="always">
			<ScrollPane fitToHeight="true" fitToWidth="true">
				<VBox fx:id="machinesVBox">
					<StackPane fx:id="noMachinesStack" VBox.vgrow="always">
						<Label text="%project.machines.tab.noMachines" />
					</StackPane>
				</VBox>
			</ScrollPane>
		</SplitPane>
	</VBox>
</fx:root>
