<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.HBox?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Tooltip?>
<fx:root type="Tab" text="%project.tab.title" closable="false"
		 xmlns:fx="http://javafx.com/fxml/1">
	<VBox stylesheets="@/prob.css" spacing="0">
		<AnchorPane styleClass="border">
			<HBox alignment="CENTER_RIGHT" AnchorPane.leftAnchor="6"
				  AnchorPane.topAnchor="10" AnchorPane.bottomAnchor="4">
				<Label fx:id="projectNameLabel" HBox.hgrow="ALWAYS">
					<font>
						<Font size="18" />
					</font>
				</Label>
				<AnchorPane>
					<Button fx:id="help" AnchorPane.rightAnchor="-8.0"
							prefHeight="26.0" prefWidth="26.0" contentDisplay="GRAPHIC_ONLY"
							onAction="#openHelp">
						<graphic>
							<FontAwesomeIconView fill="#555560" glyphName="QUESTION_CIRCLE" size="26" />
						</graphic>
						<tooltip>
							<Tooltip text="%menu.help" />
						</tooltip>
					</Button>
				</AnchorPane>
			</HBox>
			<TextField fx:id="projectNameTextField"
				AnchorPane.leftAnchor="6" AnchorPane.topAnchor="10"
				AnchorPane.bottomAnchor="4" managed="false" visible="false">
				<font>
					<Font size="12" />
				</font>
			</TextField>
		</AnchorPane>
		<AnchorPane VBox.vgrow="ALWAYS">
			<ScrollPane hbarPolicy="NEVER" AnchorPane.leftAnchor="0"
				AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0"
				AnchorPane.bottomAnchor="0">
				<AnchorPane>
					<Text fx:id="projectDescriptionText" AnchorPane.leftAnchor="6"
						AnchorPane.topAnchor="6" AnchorPane.rightAnchor="6"
						AnchorPane.bottomAnchor="6" />
					<TextArea fx:id="projectDescriptionTextArea"
						AnchorPane.leftAnchor="5" AnchorPane.topAnchor="5"
						AnchorPane.rightAnchor="5" AnchorPane.bottomAnchor="5" managed="false"
						visible="false" />
				</AnchorPane>
			</ScrollPane>
			<Button fx:id="applyButton" text="%common.apply"
				AnchorPane.rightAnchor="16" AnchorPane.bottomAnchor="6" styleClass="button-blue"
				managed="false" visible="false" />
		</AnchorPane>
	</VBox>
</fx:root>

