	<MenuItem text="%menu.consoles.items.groovy" onAction="#handleGroovyConsole" />
	<SeparatorMenuItem />
	<MenuItem text="%menu.advancedOptions.items.reload" onAction="#reloadPlugins"/>
	<MenuItem text="%menu.advancedOptions.items.add" onAction="#addPlugin" />
	<MenuItem text="%menu.advancedOptions.items.menu" onAction="#showPluginMenu"/>
	<SeparatorMenuItem />
	<Menu text="%menu.visualisation.use" xmlns:fx="http://javafx.com/fxml/1">
		<MenuItem fx:id="openVisualisationItem" text="%menu.visualisation.items.select" onAction="#openVisualisation"/>
		<MenuItem fx:id="stopVisualisationItem" text="%menu.visualisation.items.stop" onAction="#stopVisualisation"/>
		<MenuItem fx:id="detachVisualisationItem" text="%menu.visualisation.items.detach" onAction="#detachVisualisation"/>
	</Menu>
</fx:root>

