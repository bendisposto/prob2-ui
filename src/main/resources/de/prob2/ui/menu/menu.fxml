<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<fx:root type="javafx.scene.control.MenuBar"  xmlns:fx="http://javafx.com/fxml" BorderPane.alignment="CENTER">
	<menus>
		<Menu mnemonicParsing="false" text="%menu.file">
			<items>
				<MenuItem mnemonicParsing="false" text="%menu.file.items.open" onAction="#handleOpen" />
				<MenuItem mnemonicParsing="false" text="Close" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="Edit">
			<items>
				<MenuItem mnemonicParsing="false" text="Delete" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="%menu.verify">
			<items>
				<MenuItem mnemonicParsing="false" text="%menu.verify.items.modelcheck" onAction="#handleModelCheck" />
				<MenuItem mnemonicParsing="false" text="Close" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="Perspectives">
			<items>
				<MenuItem mnemonicParsing="false" text="Default" onAction="#handleLoadDefault" />
				<MenuItem mnemonicParsing="false" text="Load..." onAction="#handleLoadPerspective" />
			</items>
		</Menu>
		<Menu mnemonicParsing="false" text="Help">
			<items>
				<MenuItem mnemonicParsing="false" text="About" />
			</items>
		</Menu>
	</menus>
</fx:root>
