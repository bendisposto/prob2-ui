<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<fx:root type="javafx.scene.control.MenuBar" xmlns:fx="http://javafx.com/fxml" BorderPane.alignment="CENTER">
	<Menu mnemonicParsing="false" text="%menu.file">
		<MenuItem text="%menu.file.items.open" onAction="#handleOpen"/>
		<MenuItem text="Close"/>
	</Menu>
	<Menu mnemonicParsing="false" text="%menu.edit">
		<MenuItem text="%menu.edit.items.editBlacklist" onAction="#handleEditBlacklist"/>
	</Menu>
	<Menu mnemonicParsing="false" text="%menu.verify">
		<MenuItem text="%menu.verify.items.modelcheck" onAction="#handleModelCheck"/>
		<MenuItem text="Close"/>
	</Menu>
	<Menu mnemonicParsing="false" text="Help">
		<MenuItem text="About"/>
	</Menu>
</fx:root>
