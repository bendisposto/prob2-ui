<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<fx:root type="Menu" text="%menu.view" xmlns:fx="http://javafx.com/fxml/1">
	<MenuItem fx:id="viewMenu_default" text="%menu.view.default"
		onAction="#handleDefaultFontSize" accelerator="Shortcut+D" />
	<MenuItem fx:id="viewMenu_bigger" text="%menu.view.bigger"
		accelerator="Alt+Shortcut+PLUS" onAction="#handleIncreaseFontSize" />
	<MenuItem fx:id="viewMenu_smaller" text="%menu.view.smaller"
		accelerator="Alt+Shortcut+MINUS" onAction="#handleDecreaseFontSize" />
</fx:root>

