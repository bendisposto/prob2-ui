<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<fx:root type="Menu" text="%menu.view" xmlns:fx="http://javafx.com/fxml/1">
	<MenuItem fx:id="viewMenu_default" text="%menu.view.default"
		onAction="#handleDefaultFontSize" accelerator="Shortcut+'0'" />
	<MenuItem fx:id="viewMenu_bigger" text="%menu.view.bigger"
		accelerator="Alt+Shortcut+'+'" onAction="#handleIncreaseFontSize" />
	<MenuItem fx:id="viewMenu_smaller" text="%menu.view.smaller"
		accelerator="Alt+Shortcut+'-'" onAction="#handleDecreaseFontSize" />	
	<SeparatorMenuItem />
	<Menu text="%menu.perspectives" fx:id="presetPerspectivesMenu">
		<MenuItem text="%menu.perspectives.items.preset.default"
				  onAction="#handleLoadDefault" />
		<MenuItem text="%menu.perspectives.items.preset.separated"
				  onAction="#handleLoadSeparated" />
		<MenuItem text="%menu.perspectives.items.preset.separated2"
				  onAction="#handleLoadSeparated2" />
		<SeparatorMenuItem />
		<MenuItem text="%menu.perspectives.items.load" onAction="#handleLoadPerspective" />
	</Menu>
	<MenuItem text="%menu.perspectives.items.detach" onAction="#handleLoadDetached" />
</fx:root>

