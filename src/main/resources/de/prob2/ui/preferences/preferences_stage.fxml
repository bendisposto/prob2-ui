<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<fx:root type="Stage" title="Preferences" minHeight="160.0" minWidth="320.0" xmlns:fx="http://javafx.com/fxml/1">
	<scene>
		<Scene>
			<BorderPane>
				<top>
					<HBox>
						<padding>
							<Insets top="5.0" bottom="5.0" left="5.0" right="5.0"/>
						</padding>
						<Button fx:id="applyButton" text="Apply Changes" disable="true" onAction="#handleApplyChanges"/>
					</HBox>
				</top>
				<center>
					<TreeTableView fx:id="tv" prefHeight="400.0" prefWidth="600.0" editable="true">
						<columns>
							<TreeTableColumn fx:id="tvName" editable="false" minWidth="80.0" prefWidth="320.0" text="Name"/>
							<TreeTableColumn fx:id="tvChanged" editable="false" resizable="false" prefWidth="20.0" text="*"/>
							<TreeTableColumn fx:id="tvValue" editable="true" minWidth="40.0" prefWidth="80.0" sortable="false" text="Value"/>
							<TreeTableColumn fx:id="tvDefaultValue" editable="false" minWidth="40.0" prefWidth="80.0" sortable="false" text="Default Value"/>
							<TreeTableColumn fx:id="tvDescription" editable="false" minWidth="80.0" prefWidth="640.0" sortable="false" text="Description"/>
						</columns>
						<TreeItem expanded="true"/>
					</TreeTableView>
				</center>
			</BorderPane>
		</Scene>
	</scene>
</fx:root>
