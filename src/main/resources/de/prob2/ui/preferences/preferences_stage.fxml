<?xml version="1.0" encoding="UTF-8"?>

<?import de.prob2.ui.preferences.PreferencesView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<fx:root type="Stage" title="%preferences.title"
	minHeight="160.0" minWidth="320.0" onCloseRequest="#handleClose"
	xmlns:fx="http://javafx.com/fxml/1">
	<scene>
		<Scene stylesheets="@/prob.css">
			<!-- TabPane *obviously* does not extend Pane, so we have to wrap it in
				a StackPane so we can add the menu bar to it on Mac. -->
			<StackPane>
				<TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
					<Tab fx:id="tabGeneral" id="general" text="%preferences.tabs.general">
						<VBox spacing="10.0">
							<padding>
								<Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
							</padding>
							<HBox spacing="10.0" alignment="CENTER_LEFT">
								<Label text="%preferences.tabs.general.recentFilesLimitLabel"/>
								<Spinner fx:id="recentFilesCountSpinner"/>
							</HBox>
							<HBox spacing="10.0" alignment="CENTER_LEFT">
								<Label text="%preferences.tabs.general.defaultLocationForProjectsLabel"/>
								<TextField fx:id="defaultLocationField" HBox.hgrow="always"/>
								<Button styleClass="button-dark2" text="%newProject.stage.selectLocation"
									onAction="#selectDefaultLocation" />
							</HBox>
						</VBox>
					</Tab>
					<Tab fx:id="tabPreferences" id="preferences" text="%preferences.tabs.proBPreferences">
						<BorderPane styleClass="dialog">
							<center>
								<PreferencesView fx:id="prefsView"/>
							</center>
							<bottom>
								<HBox spacing="10.0">
									<padding>
										<Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
									</padding>
									<Button fx:id="undoButton" text="%preferences.tabs.proBPreferences.undo" disable="true" HBox.hgrow="NEVER" onAction="#handleUndoChanges" />
									<Button fx:id="resetButton" text="%preferences.tabs.proBPreferences.reset" disable="true" HBox.hgrow="NEVER" onAction="#handleRestoreDefaults" />
									<Label fx:id="applyWarning" text="%preferences.tabs.proBPreferences.notAppliedWarning" visible="false" HBox.hgrow="ALWAYS" minWidth="16.0" maxWidth="Infinity" maxHeight="Infinity" style="-fx-text-fill: -prob-orange; -fx-font-weight: bold;" alignment="CENTER" />
									<Button fx:id="applyButton" text="%preferences.tabs.proBPreferences.apply" disable="true" HBox.hgrow="NEVER" onAction="#handleApply" />
								</HBox>
							</bottom>
						</BorderPane>
					</Tab>
					<Tab fx:id="tabStatesView" id="statesView" text="%preferences.tabs.statesView">
						<AnchorPane>
							<ListView fx:id="blacklistView" editable="true"
								AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0"
								AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
								<padding>
									<Insets top="25" right="25" bottom="5" left="25" />
								</padding>
							</ListView>
						</AnchorPane>
					</Tab>
				</TabPane>
			</StackPane>
		</Scene>
	</scene>
</fx:root>
