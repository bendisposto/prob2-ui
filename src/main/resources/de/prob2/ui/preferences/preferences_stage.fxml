<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<fx:root type="Stage" fx:id="stage" title="Preferences"
	minHeight="160.0" minWidth="320.0" onCloseRequest="#handleClose"
	xmlns:fx="http://javafx.com/fxml/1">
	<scene>
		<Scene stylesheets="@../../../../prob.css">
			<!-- TabPane *obviously* does not extend Pane, so we have to wrap it in 
				a StackPane so we can add the menu bar to it on Mac. -->
			<StackPane>
				<TabPane tabClosingPolicy="UNAVAILABLE">
					<Tab text="General">
						<VBox spacing="10.0">
							<padding>
								<Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
							</padding>
							<HBox spacing="10.0">
								<!-- TODO fix vertical alignment -->
								<Label text="Number of recent files to keep:"/>
								<Spinner fx:id="recentFilesCountSpinner"/>
							</HBox>
						</VBox>
					</Tab>
					<Tab text="ProB Preferences">
						<BorderPane styleClass="dialog">
							<center>
								<TreeTableView fx:id="tv" prefHeight="400.0"
									prefWidth="600.0" editable="true" showRoot="false" styleClass="with-border">
									<columns>
										<TreeTableColumn fx:id="tvName" editable="false"
											minWidth="80.0" prefWidth="320.0" text="Name" />
										<TreeTableColumn fx:id="tvChanged" editable="false"
											resizable="false" prefWidth="20.0" text="*" />
										<TreeTableColumn fx:id="tvValue" editable="true"
											minWidth="40.0" prefWidth="120.0" sortable="false" text="Value" />
										<TreeTableColumn fx:id="tvDefaultValue"
											editable="false" minWidth="40.0" prefWidth="120.0" sortable="false"
											text="Default Value" />
										<TreeTableColumn fx:id="tvDescription"
											editable="false" styleClass="left" minWidth="80.0" prefWidth="900.0"
											sortable="false" text="Description" />
									</columns>
									<placeholder>
										<Label text="No model loaded" />
									</placeholder>
									<TreeItem expanded="true" />
								</TreeTableView>
							</center>
							<bottom>
								<HBox spacing="10.0">
									<padding>
										<Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
									</padding>
									<Button fx:id="undoButton" text="Undo Changes" disable="true"
										HBox.hgrow="NEVER" onAction="#handleUndoChanges" />
									<Button fx:id="resetButton" text="Restore Defaults"
										disable="true" HBox.hgrow="NEVER" onAction="#handleRestoreDefaults" />
									<Label fx:id="applyWarning" text="There are unapplied preference changes"
										visible="false" HBox.hgrow="ALWAYS" minWidth="16.0" maxWidth="Infinity"
										maxHeight="Infinity" style="-fx-text-fill: -prob-orange; -fx-font-weight: bold"
										alignment="CENTER" />
									<Button fx:id="applyButton" text="Apply Changes"
										disable="true" HBox.hgrow="NEVER" onAction="#handleApply" />
								</HBox>
							</bottom>
						</BorderPane>
					</Tab>
					<Tab text="States View">
						<AnchorPane>
							<ListView fx:id="blacklistView" editable="true"
								AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="0.0"
								AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
								<padding>
									<Insets top="25" right="25" bottom="5" left="25" />
								</padding>
							</ListView>
						</AnchorPane>
					</Tab>
				</TabPane>
			</StackPane>
		</Scene>
	</scene>
</fx:root>
