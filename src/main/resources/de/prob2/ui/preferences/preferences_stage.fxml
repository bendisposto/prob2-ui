<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeItem?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>

<fx:root type="Stage" fx:id="stage" title="Preferences"
	minHeight="160.0" minWidth="320.0" onCloseRequest="#handleClose"
	xmlns:fx="http://javafx.com/fxml/1">
	<scene>
		<Scene>
			<BorderPane stylesheets="@../../../../prob.css"
				styleClass="dark">
				<center>
					<TreeTableView fx:id="tv" prefHeight="400.0"
						prefWidth="600.0" editable="true" showRoot="false" styleClass="with-border">
						<columns>
							<TreeTableColumn fx:id="tvName" editable="false"
								minWidth="80.0" prefWidth="320.0" text="Name" />
							<TreeTableColumn fx:id="tvChanged" editable="false"
								resizable="false" prefWidth="20.0" text="*" />
							<TreeTableColumn fx:id="tvValue" editable="true"
								minWidth="40.0" prefWidth="120.0" sortable="false" text="Value" />
							<TreeTableColumn fx:id="tvDefaultValue" editable="false"
								minWidth="40.0" prefWidth="120.0" sortable="false" text="Default Value" />
							<TreeTableColumn fx:id="tvDescription" editable="false"
								styleClass="left" minWidth="80.0" prefWidth="900.0" sortable="false"
								text="Description" />
						</columns>
						<placeholder>
							<Label text="No model loaded" />
						</placeholder>
						<TreeItem expanded="true" />
					</TreeTableView>
				</center>
				<bottom>
					<HBox spacing="5.0">
						<padding>
							<Insets top="5.0" bottom="5.0" left="5.0" right="5.0" />
						</padding>
						<Button fx:id="undoButton" text="Undo Changes" disable="true"
							HBox.hgrow="NEVER" onAction="#handleUndoChanges" />
						<Button fx:id="resetButton" text="Restore Defaults"
							disable="true" HBox.hgrow="NEVER" onAction="#handleRestoreDefaults" />
						<Label fx:id="applyWarning" text="There are unapplied preference changes"
							visible="false" HBox.hgrow="ALWAYS" minWidth="16.0" maxWidth="Infinity"
							style="-fx-text-fill: red" alignment="CENTER" />
						<Button fx:id="okButton" text="OK" disable="true"
							HBox.hgrow="NEVER" onAction="#handleOk" />
						<Button fx:id="cancelButton" text="Cancel" HBox.hgrow="NEVER"
							onAction="#handleCancel" />
						<Button fx:id="applyButton" text="Apply" disable="true"
							HBox.hgrow="NEVER" onAction="#handleApply" />
					</HBox>
				</bottom>
			</BorderPane>
		</Scene>
	</scene>
</fx:root>
